<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>K-State Course Catalog - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="header">
      <div class="logo">@Html.ActionLink("K-State Course Catalog",  "Index", "Courses")</div>
    
      <nav class="top_menu">
        <ul>
          <li>@Html.ActionLink("Course Catalog", "Index", "Courses")</li>
          <li>@Html.ActionLink("Degree Programs", "Index", "DegreePrograms")</li>
          <li>@Html.ActionLink("Elective Lists", "Index", "ElectiveLists")</li>
          <li>@Html.ActionLink("Plan of Study", "Index", "Plans")</li>
          @if(User.IsInRole("Administrator")){ <li>@Html.ActionLink("Manage Users", "Index", "Users")</li> }
        </ul><ul>
          @Html.Partial("LoginPartial")
        </ul>
      </nav>
    
    </header>



    <div class="container">
    @RenderBody()
    </div>
    
    <footer class="footer">
        <a href="http://people.cis.ksu.edu/~russfeld">Russell Feldhausen</a> CIS 726 Assignment 3
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
